<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FormsAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FormsAPP.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="z-index:10;top:0;position:sticky;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 py-2" style="z-index:10;top:0;position:sticky;
            ">
            <div class="container">
                <div class="navbar-brand-container">
                    <a class="navbar-brand fs-5" asp-area="" asp-controller="Home" asp-action="Index">FormsAPP</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between px-3">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark px-2" asp-area="" asp-controller="Forms" asp-action="Index">Forms</a>
                        </li>
                        @if (Context.Session.GetString("Role") == "admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark px-2" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>                            
                        }
                    </ul>
                    @if(Context.Request.Cookies.TryGetValue("jwt",out var token))
                    {
                        <div class="d-flex align-items-center ms-auto">
                            <a asp-controller="Account" asp-action="UserProfile" class="text-decoration-none text-black">
                                Account manager
                                <img src="~/images/profile_icon.png"
                                class="rounded-circle object-fit-cover border border-light"
                                width="36"
                                height="36"
                                alt="Profile" />
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center ms-auto btn border-primary">
                            <a class="nav-link text-dark px-2 " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <style>
        .navbar {
            min-height: 60px; 
        }

        .navbar-brand-container {
            margin-right: 1rem;
        }

        .navbar-nav .nav-item {
            margin: 0 0.25rem;
        }

        .container {
            max-width: 1200px;
            min-width: 330px;
            padding: 0 15px;
        }
    </style>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
